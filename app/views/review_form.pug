doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Review User
    link(rel="stylesheet", href="/styles.css")

  body
    .container
      h1 Reviewing #{receiverName}

      form.review-form(action=`/review/${receiverID}`, method="POST")
        .form-group
          label(for="rating") Rating (1-5):
          select.form-control(name="rating", id="rating")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5

        .form-group
          label(for="comments") Comments:
          textarea.form-control(name="comments", id="comments", rows="4", cols="50")

        button.button(type="submit") Submit Review