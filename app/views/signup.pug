extends layout_no_links.pug

block content
  div(style='text-align: center;')
    h1 Sign Up
  form(action='/signup', method='post', class='signup-form')
    div.form-group
      label(for='firstName') First Name:
      input(type='text', id='firstName', name='firstName', required=true, class='form-control')
    div.form-group
      label(for='lastName') Last Name:
      input(type='text', id='lastName', name='lastName', required=true, class='form-control')
    div.form-group
      label(for='email') Email:
      input(type='email', id='email', name='email', required=true, class='form-control')
    div.form-group
      label(for='password') Password:
      input(type='password', id='password', name='password', required=true, class='form-control')
    div.form-group
      label(for='dob') Date of Birth:
      input(type='date', id='dob', name='dob', required=true, class='form-control')
    div.form-group
      label(for='gender') Gender:
      select(id='gender', name='gender', required=true, class='form-control')
        option(value='') Select Gender
        option(value='male') Male
        option(value='female') Female
        option(value='other') Other
    div.form-group
      label(for='locationBased') Location Based:
      select(id='locationBased', name='locationBased', required=true, class='form-control')
        option(value='') Select Location
        option(value='northLondon') North London
        option(value='eastLondon') East London
        option(value='centralLondon') Central London
        option(value='westLondon') West London
        option(value='southLondon') South London
    div.form-group
      label(for='travelLocation') Willing to Travel To:
      br
      input(type='checkbox', id='northLondon', name='travelLocation', value='northLondon', required=true)
      label(for='northLondon') North London
      input(type='checkbox', id='eastLondon', name='travelLocation', value='eastLondon')
      label(for='eastLondon') East London
      input(type='checkbox', id='centralLondon', name='travelLocation', value='centralLondon')
      label(for='centralLondon') Central London
      input(type='checkbox', id='westLondon', name='travelLocation', value='westLondon')
      label(for='westLondon') West London
      input(type='checkbox', id='southLondon', name='travelLocation', value='southLondon')
      label(for='southLondon') South London
    button(type='submit', class='button') Sign Up
  div(style='text-align: center;')
    p
      a(href='/signin') Already have an account? Sign In